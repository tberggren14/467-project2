<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Order fullfillment</title>
    <link rel="stylesheet" type="text/css" href="/order.css" />
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  </head>

  <script>
    function fulfill(orderid) {
      console.log(orderid);
      axios.post('http://localhost:3000/order', {
        orderid: orderid
      });
    }
  </script>

  <body>
    <header>
      <h1>Order fulfillment</h1>

      <!--navbar at top of page-->
      <div class="navbar">
        <a class="logo" href="#">Parts<span>Store</span></a>

        <nav>
          <!--Navbar button(s)-->
          <ul class="primary-nav">
            <li class="current"><a href="/index">Home</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <il>
      <% for (order in all) { %>
      <li>
        <button onclick="fulfill(<%= all[order].orderid %>)">
          Fulfill Order
        </button>
        <%= all[order].orderid %>, <%= all[order].name %>, <%= all[order].email
        %>, <%= all[order].address %>, <%= all[order].shipandhandle %>, <%=
        all[order].price %>, <%= all[order].weight %>, <%=
        all[order].timeoforder %>,
      </li>
      <% }; %>
    </il>
  </body>
</html>
